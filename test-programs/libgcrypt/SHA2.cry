sha256 : {a} (64 >= width(a*8), 512*((a+72)/64)-8*a >= 65) => [a][8] -> [256];
sha256 msg = join(reverse(Hs@(width(Hs)-1)))
  where {
    Hs = [iv256] #
         [| block(H, [| reverse w || w <- split(M)|])
         || H <- Hs
         || M <- pad(join([| reverse c || c <- msg |]))
         |];

  };

